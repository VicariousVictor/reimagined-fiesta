<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>CST Quote App</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <h1 data-position="header">Words of Wisdom from CST Students.</h1>

    <section data-position="add-quote">
      <h2>Add quote</h2>

      <form action="/quotes" method="POST">
        <input type="text" placeholder="name" name="name" />
        <input type="text" placeholder="quote" name="quote" />
        <button type="submit">Submit</button>
      </form>
    </section>

    <section data-position="update-quote">
      <div>
        <h2>CIT Student Invades!</h2>
        <p>
          Replaces first CST quote with a quote written by CIT Student
        </p>
        <button id="update-button">Replace CST Student's quote</button>
      </div>
    </section>

    <section data-position="delete-quote">
      <div>
        <h2>Remove CIT Student</h2>
        <p>
          Delete one CIT Student's quote. Does nothing if there are no more
          CIT student's quotes
        </p>
        <button id="delete-button">Delete CIT Student's quote</button>
      </div>
      <div id="message"></div>
    </section>

    <section data-position="quotes">
      <h2>Quotes</h2>

      <ul class="quotes">
        <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
          <span><%= quotes[i].name %></span>:
          <span><%= quotes[i].quote %></span>
        </li>
        <% } %>
      </ul>
    </section>

    <script src="/main.js"></script>
  </body>
</html>
